<h1>List of students</h1>
<%= notice%>
<%= link_to'New Student',new_student_path%>
<table style ="border : 2px solid black" class=text-center>

<thead>
    <tr>
    <th  style="border: 2px solid black;" class="bg-primary">first_name</th>
    <th  style="border: 2px solid black;">last_name</th>
    <th style="border: 2px solid black;" >email</th>
    <th colspan="3"  style="border: 2px solid black;">Action</th>
    </tr>
</thead>
<tbody  >
<% @students.each do|student| %>
    <tr style ="border : 2px solid black" >
   <td style="border: 2px solid black;"><%= student.first_name %></td>
   <td style="border: 2px solid black;"><%= student.last_name %></td>
   <td style="border: 2px solid black;"><%= student.email%></td>
   <td style="border: 2px solid black;"><%= link_to 'view',student%></td>
   <td style="border: 2px solid black;"><%= link_to 'edit',edit_student_path(student)%></td>
   <td style="border: 2px solid black;"><%= link_to 'Delete',student,data:{turbo_method: :delete ,turbo_confirm:'Are you sure'}%></td>
    </tr>
<%end%>
</tbody>
</table>